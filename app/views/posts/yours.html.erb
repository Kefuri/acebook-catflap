<% if flash[:notice] %>
  <div class="sign_up_notice"> <%= flash[:notice] %> </div>
<% end %>
</br>

<div>
  <% if @posts.length == 0 %>
    <%="You have no posts... :("%>
  <% end %>
</div>
</br>

<% @posts.each do |post| %>
  <p>
    <%= post.message %></br>
    <%= post.created_at %>
  </p>
  
<% end %>

<div>
  <%= link_to "Create a post", new_post_path, method: :get %>
</div>
